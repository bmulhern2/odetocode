        <script data-ad-client="ca-pub-1064406357834510" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <style>
        li {
            white-space: pre-wrap
        }
        h1 {
            font-size: 60px;
        } li {
            font-size: 22px;
        }
        </style> 
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-171636977-1"></script>
