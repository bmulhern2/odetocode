        <style>
            li {
                white-space: pre-wrap
            }
            h1 {
                font-size: 60px;
            } table {
                font-size: 22px;
            }
        </style>
        </head>
    <body class="text-center bg-dark text-light">
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <a class="navbar-brand text-light display-4" href="/">OdeToCode</a>
            <button class="navbar-toggler bg-light" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon bg-light"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active bg-light list-unstyled">
                        <a class="nav-link text-dark" href="/post/<%= Post._id %>"><%= Post.description %></a>
                        <nav-link><a href="/" class="text-center">Back To OdeToCode</a></nav-link>
                    </li>
                </ul>
            </div>
        </nav>
        <hr class="bg-light">
        <ul>
            <li class="justify-content-center mt-2 list-unstyled text-primary display-4 bg-light"><%- Post.description %></li>
            <li class="justify-content-center list-unstyled"><img alt="" class="list-unstyled mt-2" src="data:image/png;base64, <%= Post.image %>"></img></li>
            <li class="mt-4 list-unstyled"><%= Post.post %></li>
            <hr class="bg-light">
            <li class="mt-2 list-unstyled text-primary"><%- Post.author %></li>
            <li class="mt-4 list-unstyled text-primary"><%= Post.dateCreated %></li>
        </ul>
